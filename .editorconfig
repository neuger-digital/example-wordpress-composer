# Editor configuration, see http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = true

[*.{js,json}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{php,html,htm}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{scss,sass}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
